{
  "manifest_version": 3,
  "name": "webapp-urltools",
  "version": "1.0.0",
  "description": "URL editing and copying tools optimized for Chrome web apps (--app mode)",
  "permissions": ["tabs", "search", "clipboardWrite", "offscreen", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-listener.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "commands": {
    "edit-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Edit current URL"
    },
    "copy-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Copy current URL to clipboard"
    }
  }}
